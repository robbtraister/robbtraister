{
  "name": "robbtraister",
  "version": "1.0.0",
  "repository": "git@github.com:robbtraister/robbtraister.git",
  "author": "robb.traister@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "webpack build --mode production",
    "build:vendors": "[ -f ./webpack.vendors.ts ] && ([ ! -f ./public/vendors-manifest.json ] || [ \"$(md5 -q ./node_modules/.yarn-integrity)\" != \"$(node -p \"require('./public/vendors-manifest.json').name.split('_').pop()\")\" ]) && NODE_OPTIONS=--max-old-space-size=4096 webpack build --config ./webpack.vendors.ts --env HASH=$(md5 -q ./node_modules/.yarn-integrity) || true",
    "lint": "yarn run lint:ls && yarn run lint:css && yarn run lint:js",
    "lint:css": "stylelint --cache 'src/**/*.{scss,js,jsx,ts,tsx}'",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:ls": "ls-lint",
    "prebuild": "yarn install --frozen-lockfile",
    "prebuild:vendors": "yarn install --frozen-lockfile",
    "prestart": "yarn run stop 2> /dev/null; yarn run build:vendors 2> /dev/null",
    "start": "webpack serve",
    "stop": "lsof -i \"TCP:${PORT:-443}\" -s TCP:LISTEN | grep 'LISTEN' | awk '{ print $2; }' | xargs kill 2> /dev/null || true",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.10.0",
    "@svgr/webpack": "^5.5.0",
    "@types/css-minimizer-webpack-plugin": "^3.0.2",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/terser-webpack-plugin": "^5.2.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "eslint": "7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.4",
    "html-webpack-plugin": "^5.4.0",
    "html-webpack-tags-plugin": "^3.0.1",
    "lint-staged": "^11.2.3",
    "mini-css-extract-plugin": "^2.4.2",
    "msw": "^0.35.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.4",
    "typescript-plugin-css-modules": "^3.4.0",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  },
  "optionalDependencies": {
    "husky": "4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged --relative",
      "pre-push": "yarn run typecheck"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn run --silent lint:js --fix",
    "*.{css,scss}": "yarn run --silent lint:css --fix",
    "src/**/*": "yarn run --silent lint:ls"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
